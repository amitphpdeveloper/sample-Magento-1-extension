<config>
	  <tabs>
		<tm translate="label" module="productlist">
            <label>Tm</label>
            <sort_order>0</sort_order>
        </tm>
	  </tabs>
	  <sections>
		<product_list  translate="label" module="productlist">                    
		<label>Product List</label>
		<tab>tm</tab>
		<frontend_type>text</frontend_type>
		<sort_order>0</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>            
					<groups>
						<genneral_setting>
							<label>Genneral setting</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
							<fields>
								<enabled translate="label">
									<label>Enable Tm ProductList Extension</label>
									<frontend_type>select</frontend_type>
									<source_model>adminhtml/system_config_source_yesno</source_model>
									<sort_order>1</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
								</enabled>
								<jqueryinclude translate="label">
									<label>Include Jquery Library</label>
									<comment>Set No if already jQuery included</comment>
									<frontend_type>select</frontend_type>
									<source_model>adminhtml/system_config_source_yesno</source_model>
									<sort_order>2</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
								</jqueryinclude>
							</fields>
					</genneral_setting>
				     <settings translate="label"> 
					  <label>Frontend Setting</label>
					  <frontend_type>text</frontend_type>
					  <sort_order>20</sort_order>
					  <show_in_default>1</show_in_default>
					  <show_in_website>1</show_in_website>
					  <show_in_store>1</show_in_store>
				       <fields>
                          <product_number_to_show translate="label">
                            <label>Number of Products to show</label>
							<frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Must be in the allowed values list. Default will be 10 if left blank</comment>
                          </product_number_to_show>
					   </fields>
					   </settings>
					</groups>
		</product_list>
	  </sections>
</config>
